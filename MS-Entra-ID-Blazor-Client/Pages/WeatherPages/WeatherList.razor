@page "/weatherList"
@inherits WeatherBase
<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Temperature
            </th>
            <th>
                Summary
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in weatherList)
        {
            <tr>
                <td>
                    @item.Date
                </td>
                <td>
                    @item.TemperatureC
                </td>
                <td>
                    @item.Summary
                </td>

            </tr>
        }
    </tbody>
</table>
