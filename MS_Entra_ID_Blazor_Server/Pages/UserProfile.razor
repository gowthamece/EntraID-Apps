@page "/profile"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.Graph
@using MS_Entra_ID_Blazor_Server.Services
@using System.Security.Claims
@inject ManagedIdentityGraphService GraphService
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<h3>User Profile</h3>
@if (user == null)
{
    <p><em>Loading...</em></p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> @errorMessage
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Property</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Display Name</td>
                <td>@user.DisplayName</td>
            </tr>
            <tr>
                <td>User Principal Name</td>
                <td>@user.UserPrincipalName</td>
            </tr>
            <tr>
                <td>Mail</td>
                <td>@(user.Mail ?? "N/A")</td>
            </tr>
            <tr>
                <td>Job Title</td>
                <td>@(user.JobTitle ?? "N/A")</td>
            </tr>
            <tr>
                <td>Office Location</td>
                <td>@(user.OfficeLocation ?? "N/A")</td>
            </tr>
        </tbody>
    </table>
}

@code {
    User? user;
    string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Get the authenticated user's UPN from claims
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var userPrincipalName = authState.User.FindFirst(ClaimTypes.Name)?.Value 
                ?? authState.User.FindFirst("preferred_username")?.Value;

            if (!string.IsNullOrEmpty(userPrincipalName))
            {
                user = await GraphService.GetUserAsync(userPrincipalName);
            }
            else
            {
                errorMessage = "Unable to determine user identity.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load user profile: {ex.Message}";
            Console.WriteLine($"Error: {ex}");
        }
    }
}
