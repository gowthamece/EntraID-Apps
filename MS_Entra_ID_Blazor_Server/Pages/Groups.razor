@page "/groups"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Graph
@using MS_Entra_ID_Blazor_Server.Services
@inject ManagedIdentityGraphService GraphService
@inject IWebHostEnvironment Environment
@attribute [Authorize]

<h3>Microsoft Entra ID Groups</h3>

@{
    var isAzure = !string.IsNullOrEmpty(System.Environment.GetEnvironmentVariable("WEBSITE_INSTANCE_ID"));
    var authMethod = isAzure ? "Managed Identity (Application Permissions)" : "User Sign-In (Delegated Permissions)";
    var badgeClass = isAzure ? "bg-success" : "bg-primary";
}

<div class="mb-3">
    <span class="badge @badgeClass">
        <i class="bi bi-shield-check"></i> @authMethod
    </span>
</div>

@if (isLoading)
{
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    <p><em>Loading groups...</em></p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> @errorMessage
    </div>
}
else if (groups == null || !groups.Any())
{
    <div class="alert alert-info" role="alert">
        No groups found.
    </div>
}
else
{
    <div class="mb-3">
        <strong>Total Groups:</strong> @groups.Count
    </div>
    
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Display Name</th>
                    <th>Description</th>
                    <th>Mail</th>
                    <th>Mail Enabled</th>
                    <th>Security Enabled</th>
                    <th>Group ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in groups)
                {
                    <tr>
                        <td>@group.DisplayName</td>
                        <td>@(string.IsNullOrEmpty(group.Description) ? "N/A" : group.Description)</td>
                        <td>@(string.IsNullOrEmpty(group.Mail) ? "N/A" : group.Mail)</td>
                        <td>
                            @if (group.MailEnabled == true)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>
                            @if (group.SecurityEnabled == true)
                            {
                                <span class="badge bg-primary">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td><small class="text-muted">@group.Id</small></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Group> groups = new();
    private bool isLoading = true;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;

            // Get all groups using Managed Identity
            groups = await GraphService.GetAllGroupsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to retrieve groups: {ex.Message}";
            Console.WriteLine($"Error retrieving groups: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
